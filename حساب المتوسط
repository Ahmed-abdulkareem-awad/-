#include <iostream>

int main() {
    int n, sum = 0;
    float average;

    std::cout << "Enter the number of elements: ";
    std::cin >> n;

    int numbers[n];

    std::cout << "Enter the elements: ";
    for (int i = 0; i < n; i++) {
        std::cin >> numbers[i];
        sum += numbers[i];
    }

    average = static_cast<float>(sum) / n;

    std::cout << "The average is: " << average << std::endl;

    return 0;
}
